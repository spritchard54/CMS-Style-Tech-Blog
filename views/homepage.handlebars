{{#if loggedIn}}
  <div class='menu-container'>
    <div class='card-header col-md-12'>
      <div class='post'>

        <h3 class='postHeader w-100'>{{title}}</h3>
        {{#each posts as |post|}}
          <section class='postText'>{{content}}</section>
        {{/each}}
        <section class='author'>{{user.username}}</section>
      </div>
    </div>
  </div>
{{else}}
  <p class='m-auto'>Please
    <a href='/login'>log in</a>
    or
    <a href='/signup'>create an account</a>
    to view this page.</p>
{{/if}}